{
  "name": "lawofone-cl",
  "version": "1.0.0",
  "description": "The One - Law of One Reinterpretation",
  "scripts": {
    "sass:watch": "sass --watch src/scss/main.scss:dist/css/main.css",
    "sass:build": "sass src/scss/main.scss:dist/css/main.css --style=compressed",
    "serve": "live-server dist --port=3000 --no-browser",
    "dev": "concurrently \"npm run sass:watch\" \"npm run serve\"",
    "build": "node scripts/build.js",
    "translate": "node scripts/translate.js"
  },
  "devDependencies": {
    "sass": "^1.69.0",
    "live-server": "^1.2.2",
    "concurrently": "^8.2.0"
  }
}
